{
  "name": "iiif-manifest-editor",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digirati-co-uk/iiif-manifest-editor.git"
  },
  "scripts": {
    "build": "turbo build",
    "build-packages": "turbo build --filter=@manifest-editor/* --filter=manifest-editor",
    "dev": "turbo dev --filter=web... --concurrency 16",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "mismatch": "syncpack list-mismatches",
    "fix-deps": "syncpack fix-mismatches",
    "bump": "syncpack fix-mismatches && lerna version --no-private && syncpack fix-mismatches",
    "versionup": "lerna version --conventional-commits --no-git-tag-version",
    "versionup:patch": "lerna version patch --conventional-commits --no-git-tag-version",
    "versionup:minor": "lerna version minor --conventional-commits --no-git-tag-version",
    "versionup:major": "lerna version major --conventional-commits --no-git-tag-version",
    "postversionup": "pnpm run commit-version",
    "postversionup:patch": "pnpm run commit-version",
    "postversionup:minor": "pnpm run commit-version",
    "postversionup:major": "pnpm run commit-version",
    "commit-version": "git add . && git commit -m \"chore(release): publish `node -p 'require(\"./lerna.json\").version'`\"",
    "release": "lerna publish from-package --no-private",
    "release:canary": "lerna publish --canary --no-private --preid next --dist-tag next --force-publish='*' --no-push --no-git-tag-version --yes"
  },
  "pnpm": {
    "overrides": {
      "polygon-editor": "0.0.23",
      "tsdown": "0.16.4",
      "react-aria-components": "^1.12",
      "@atlas-viewer/atlas": "catalog:",
      "exhibition-viewer": "https://stephenwf.github.io/exhibition-viewer-1.0.10.tgz",
      "react-reconciler": "0.33.0",
      "iiif-browser": "2.0.4",
      "@iiif/helpers": "catalog:",
      "@iiif/parser": "catalog:",
      "dompurify": "3.1.3"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@lerna-lite/cli": "^4.9.3",
    "@lerna-lite/list": "^4.9.3",
    "@lerna-lite/publish": "^4.9.3",
    "@lerna-lite/version": "^4.9.3",
    "@netlify/plugin-nextjs": "^5.4.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.2.5",
    "publint": "^0.2.7",
    "syncpack": "^13.0.4",
    "tailwindcss": "^3.4.3",
    "tslib": "^2.8.1",
    "turbo": "^2.0.3",
    "typescript": "^5.7.3",
    "typescript-plugin-css-modules": "^5.1.0"
  },
  "packageManager": "pnpm@9.11.0",
  "engines": {
    "node": ">=18"
  }
}
