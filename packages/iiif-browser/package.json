{
  "name": "@manifest-editor/iiif-browser",
  "version": "1.1.0",
  "type": "module",
  "bugs": "https://github.com/digirati-co-uk/iiif-manifest-editor/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/digirati-co-uk/iiif-manifest-editor.git",
    "directory": "packages/iiif-browser"
  },
  "engines": {
    "node": ">=18.14.1"
  },
  "keywords": [
    "iiif",
    "editor",
    "typescript"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./dist/index.css": "./dist/index.css"
  },
  "scripts": {
    "build": "tsup src/index.ts",
    "dev": "tsup src/index.ts --watch",
    "lint": "publint",
    "typecheck": "tsc --noEmit",
    "prepack": "tsup src/index.ts"
  },
  "dependencies": {
    "@atlas-viewer/atlas": "^2.2.0",
    "@iiif/helpers": "^1.3.1",
    "@iiif/parser": "^2.1.7",
    "@iiif/presentation-3": "^2.2.3",
    "@iiif/presentation-3-normalized": "^0.9.7",
    "react": "^18.3.1",
    "react-accessible-dropdown-menu-hook": "4.0.0",
    "react-dom": "^18.3.1",
    "react-iiif-vault": "^1.5.1",
    "react-lazy-load-image-component": "^1.6.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@atlas-viewer/iiif-image-api": "^2.2.0",
    "@manifest-editor/ui": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-lazy-load-image-component": "^1.6.4",
    "esbuild-plugin-react18-css": "^0.0.2",
    "esbuild-plugin-umd-wrapper": "^2.0.0",
    "postcss": "^8.4.38",
    "react-error-boundary": "^4.0.13",
    "tiny-invariant": "^1.3.3",
    "tsup": "^8.0.2",
    "typescript-plugin-css-modules": "^5.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
