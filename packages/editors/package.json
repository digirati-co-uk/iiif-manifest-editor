{
  "name": "@manifest-editor/editors",
  "version": "1.0.0",
  "type": "module",
  "bugs": "https://github.com/digirati-co-uk/iiif-manifest-editor/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/digirati-co-uk/iiif-manifest-editor.git",
    "directory": "packages/editors"
  },
  "engines": {
    "node": ">=18.14.1"
  },
  "keywords": [
    "iiif",
    "editor",
    "typescript"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./dist/index.css": "./dist/index.css"
  },
  "scripts": {
    "build": "tsup src/index.ts",
    "dev": "tsup src/index.ts --watch",
    "lint": "publint",
    "typecheck": "tsc --noEmit",
    "prepack": "tsup src/index.ts"
  },
  "dependencies": {
    "@atlas-viewer/atlas": "^2.2.0",
    "@atlas-viewer/iiif-image-api": "^2.2.0",
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/modifiers": "7.0.0",
    "@dnd-kit/sortable": "8.0.0",
    "@dnd-kit/utilities": "^3.2.1",
    "@floating-ui/react": "0.26.12",
    "polygon-editor": "^0.0.4",
    "@iiif/helpers": "^1.1.0",
    "@iiif/parser": "^2.1.0",
    "@iiif/presentation-3": "^2.2.2",
    "@iiif/presentation-3-normalized": "^0.9.7",
    "@manifest-editor/components": "1.0.0",
    "@manifest-editor/creator-api": "1.0.0",
    "@manifest-editor/editor-api": "1.0.0",
    "@manifest-editor/shell": "1.0.0",
    "classnames": "^2.3.2",
    "dompurify": "3.1.0",
    "draft-convert": "^2.1.12",
    "draft-js": "^0.11.7",
    "immer": "^10.0.4",
    "leaflet": "^1.9.4",
    "leaflet-draw": "^1.0.4",
    "react": "^18.2.0",
    "react-accessible-dropdown-menu-hook": "4.0.0",
    "react-beautiful-dnd": "^13.1.0",
    "react-calendar": "^4.8.0",
    "react-clock": "^4.6.0",
    "react-error-boundary": "^4.0.13",
    "react-datetime-picker": "^5.6.0",
    "react-dom": "^18.2.0",
    "react-i18next": "14.1.0",
    "react-iiif-vault": "^1.2.1",
    "react-leaflet": "^4.2.1",
    "react-leaflet-draw": "^0.20.4",
    "react-select-search": "^4.1.2",
    "react-textarea-autosize": "^8.3.4",
    "styled-components": "6.1.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@manifest-editor/ui": "1.0.0",
    "@repo/eslint-config": "0.0.0",
    "@types/dompurify": "3.0.5",
    "@types/draft-convert": "^2.1.4",
    "@types/draft-js": "^0.11.9",
    "@types/geojson": "^7946.0.14",
    "@types/leaflet": "^1.9.3",
    "@types/react": "^18.2.74",
    "@types/react-beautiful-dnd": "^13.1.2",
    "@types/react-dom": "^18.2.24",
    "esbuild-plugin-css-module": "^0.1.0",
    "esbuild-plugin-react18-css": "^0.0.2",
    "postcss": "^8.4.38",
    "tiny-invariant": "^1.3.3",
    "tiny-use-debounce": "^1.0.4",
    "tsup": "^8.0.2"
