{
  "name": "@manifest-editor/components",
  "version": "1.0.0",
  "type": "module",
  "bugs": "https://github.com/digirati-co-uk/iiif-manifest-editor/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/digirati-co-uk/iiif-manifest-editor.git",
    "directory": "packages/components"
  },
  "engines": {
    "node": ">=18.14.1"
  },
  "keywords": [
    "iiif",
    "editor",
    "typescript"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./dist/index.css": "./dist/index.css"
  },
  "scripts": {
    "build": "tsup src/index.tsx",
    "dev": "tsup src/index.tsx --watch",
    "storybook": "vite --port=7007 --host=0.0.0.0 --open",
    "typecheck": "tsc --noEmit",
    "lint": "publint",
    "prepack": "tsup src/index.tsx"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "@headlessui/react": "^2.0.3",
    "@iiif/helpers": "^1.1.0",
    "react-aria-components": "^1.2.1",
    "react-iiif-vault": "^1.1.1",
    "react-aria": "^3.33.1",
    "react-lazy-load-image-component": "^1.6.0",
    "@floating-ui/react": "^0.26.13",
    "@floating-ui/react-dom": "^2.0.9",
    "tailwind-merge": "^2.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "0.0.0",
    "@storylite/storylite": "^0.15.1",
    "@types/react-lazy-load-image-component": "^1.6.4",
    "@storylite/vite-plugin": "^0.15.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.24",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "tsup": "^8.0.2",
    "vite": "^5.2.8"
  },
  "publishConfig": {
    "access": "public"
  },
  "globalName": "ClientVault"
}
